{
  "identifier": "default",
  "description": "Default capabilities for FilmVault",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:path:allow-resolve-directory",
    "core:path:allow-resolve",
    "core:path:allow-normalize",
    "core:path:allow-join",
    "core:path:allow-basename",
    "core:path:allow-dirname",
    "core:path:allow-extname",

    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",

    "dialog:default",
    "dialog:allow-open",

    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-write-file",
    "fs:allow-exists",

    "shell:allow-open"
  ]
}
